<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wallet.koinlocker.fragments.SettingsFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backend_crypto_currency_text"
            android:id="@+id/backend_crypto_currency"
            android:layout_margin="10dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/crypto_currency_types"
            android:layout_below="@+id/backend_crypto_currency"
            android:layout_marginLeft="20dp"
            android:id="@+id/settings_crypto_spinner"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backend_fiat_currency_text"
            android:id="@+id/backend_fiat_currency"
            android:layout_margin="10dp"
            android:layout_below="@+id/settings_crypto_spinner"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/fiat_currency_types"
            android:layout_below="@+id/backend_fiat_currency"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>

</FrameLayout>
